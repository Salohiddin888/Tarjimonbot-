import os
from flask import Flask, request
from telegram import Bot, Update
from telegram.ext import Dispatcher, MessageHandler, filters, CommandHandler
from googletrans import Translator

TOKEN = "8148077100:AAGu5yAI0JgB2dYvWY9idjQAYVWATjvuBq8"
URL = "https://tarjimonbot-baij.onrender.com/webhook"

bot = Bot(token=TOKEN)
dispatcher = Dispatcher(bot=bot, update_queue=None, workers=4)
translator = Translator()

# Обработчик команды /start
def start(update, context):
    update.message.reply_text("Assalomu alaykum! Tarjima qilmoqchi bo'lgan matningizni yuboring.")

# Обработчик текста
def translate_message(update, context):
    text = update.message.text
    result = translator.translate(text, src='auto', dest='en')
    update.message.reply_text(f"Tarjima: {result.text}")

dispatcher.add_handler(CommandHandler("start", start))
dispatcher.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, translate_message))

# Flask-сервер
app = Flask(__name__)

@app.route('/')
def index():
    return "TarjimonBot is alive!"

@app.route('/webhook', methods=['POST'])
def webhook():
    update = Update.de_json(request.get_json(force=True), bot)
    dispatcher.process_update(update)
    return 'ok'

# Установка webhook
@app.route('/setwebhook')
def set_webhook():
    webhook_url = f"{URL}"
    success = bot.set_webhook(webhook_url)
    return f"Webhook set: {success}"

if __name__ == '__main__':
    app.run(port=5000)
